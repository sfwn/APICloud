    }


    //跳转到登录页面，调试的时候用到
    function login() {
        api.openWin({
            name: 'win_login',
            url: 'win_login.html',
        });
    }


    //GPS的启动和关闭
    var started = false;
    function gps() {
        
        if (started == false) {
            // alert('地图打开成功');
            startGps();
            //布尔值的设置在startGps()中，保证地图确实成功启动之后才修改布尔值
        } else {
            // alert('地图关闭成功');
            var bmap = api.require('bMap');
            bmap.close();
            started = false;
        }
    }


    //GPS定位，使用bMap模块能够定位并获得当前地址即可
    var _lon = 116.482893;  //高伟达总部经度
    var _lat = 39.959246;  //高伟达总部纬度
    function startGps() {
        //获得地址
        getAddress();
        alert('startGps: \n' + 'lon: ' + _lon + ' \nlat: ' + _lat);
        console.log('startGps: \n' + 'lon: ' + _lon + ' \nlat: ' + _lat);

        var pageParam = api.pageParam;
        var headerH = pageParam.headerH;
        //根据类unlogin来获得高度
        var unlogin1H = document.getElementById('unlogin1').offsetHeight;
        var category1H = document.getElementById('category1').offsetHeight;

        // alert('headerH: ' + headerH + '\n' + 
        //         'frameH: ' + frameH);
    
        var bmap = api.require('bMap');
        bmap.open({
            rect: {
                x: 0,
                //y的起始位置为：frame总高度 - 背景图片的高度(id = unlogin1) - li的高度(id = category1)
                y: headerH + unlogin1H + category1H + 5.5 + 30,
                //y: unlogin1H + category1H + 5.5/*修正量*/ + 30/*用于显示地址的框*/,
                w: 'auto',
                h: 300//300
            },
            center: {  //高斓大厦  116.482893,39.959246
                // lon: 116.482893,  //经度
                // lat: 39.959246  //纬度
                lon: _lon,
                lat: _lat
            },
            zoomLevel: 17,//3~18
            showUserLocation: true,
            fixedOn: '',//winName/frameName  //frm_user
            fixed: true  //map是否随所属 Window 或 Frame 滚动，false为滚动
        }, function(ret){
            if(ret.status == true){
                //alert('地图打开成功');
                started = true;
                currentLocation();
            } else {
                alert('地图打开失败！尝试重新打开！');
                gps();
            }
        });
    }

    function currentLocation() {
        var bmap = api.require('bMap');
        bmap.showUserLocation({
            isShow: true,
            trackingMode: 'compass'//none/follow/compass
        });
    }

    //根据经纬度获得地址详细信息
    //显示在id = address 的文本框中
    function getAddress() {
        var bmap = api.require('bMap');
        bmap.getLocation({
            accuracy: '10m',//10m/100m/1km/3km
            autoStop: true,
            filter: 1
        }, function(ret, err){
            if(ret.status == true){
                //得到经度和纬度
                _lon = ret.lon;
                _lat = ret.lat;
                alert('getAddress: \n' + 'lon: ' + _lon + ' \nlat: ' + _lat);
                console.log('startGps: \n' + 'lon: ' + _lon + ' \nlat: ' + _lat);
                //根据经纬度得到地址
                bmap.getNameFromCoords({
                    lon: _lon,
                    lat: _lat
                },function(ret, err) {
                    if(ret.status) {
                        document.getElementById('address').placeholder = ret.address;
                    }
                });
            }else{
                alert(err.code);
            }
        });
    }
</script>
