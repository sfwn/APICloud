<script>
    //总的上传方法，包含1.上传图片  2.上传视频   3.上传其他文件
    function uploadBegin() {
        api.confirm({
            title: '文件类型',
            msg: '请选择要上传的文件类型',
            buttons:['图片视频', '取消', '其他文件']
        },function(ret,err){
            if(ret.buttonIndex == 1){  //上传图片视频
                api.confirm({
                    title: '提示',
                    msg: '图片 or 视频',
                    buttons:['图片', '取消', '视频']
                },function(ret,err){
                    if(ret.buttonIndex == 1){
                        uploadPic();
                    } else if(ret.buttonIndex == 3){
                        uploadVideo();
                    } else {
                        //用户点击'取消'
                        //do nothing
                    }
                });
            } else if (ret.buttonIndex == 3) {
                //上传其他文件
                var fb = api.require('fileBrowser');
                fb.open(function(ret, err) {
                    //选择完毕后关闭fileBroswer
                    fb.close();
                    if (ret.url != null) {
                        api.alert({
                            title: '上传成功', 
                            msg: '文件路径为：' + ret.url
                        });
                        upload(ret.url);
                    } else {
                        // 下面的逻辑为什么这么写，请参见该页下面的getPic()方法
                        if (ret) {
                            //do nothing
                        } else {
                            api.alert({
                                title: '上传失败', 
                                msg: '获得文件路径失败！'
                            });
                        }
                        
                    }
                });

            }
        });
    }


    //mediaType: 图片pic，视频vedio
    //上传图片，选择是从图库上传还是相机拍摄
    function uploadPic() {
        api.confirm({
            title: '从哪里上传？',
            msg: '请选择获得图片的方式',
            buttons: ['图库', '取消', '相机']
        },function(ret, err) {
            if (ret.buttonIndex == 3) { //拍照
                getPic('camera', 'pic');
            } else if(ret.buttonIndex == 1) { //图库
                getPic('library', 'pic');
            } else { //不上传图片
                //do nothing
            }
        });
    }


    //上传视频
    function uploadVideo() {
        getPic(null, 'video');  //注意video需要''包围
    }


    //可以复用的方法，传入两个参数
    //@sourceType: 图片从哪里选
    //@mediaType: 媒体类型
    function getPic(sourceType, mediaType) {
        api.getPicture({
            sourceType: sourceType,
            mediaValue: mediaType,
            destinationType: 'url',
            allowEdit: true,
            quality: 100,
            saveToPhotoAlbum: true
        }, function(ret, err){ 
            //如果用户已经进入图片库但是又点击×号选择取消上传，则会返回一个空地址
            //只要模块没问题，ret肯定会有，只不过ret.data == null
            if (ret.data != '') {
                alert("图片路径为：" + ret.data);
                upload(ret.data);
            } else {
                // 进入else，说明ret.data为空
                // 如果有ret，没问题，正常退出
                // 如果没有ret而进入此else循环，则弹出错误信息
                if (ret) {
                    // do nothing
                } else {
                    api.alert({
                        title: '意外信息', 
                        msg: err.msg
                    });
                }
            }
        });
    }
    

    //上传所需要的统一方法
    function upload(path) {
        var fs = api.require('fs');
        api.ajax({
            url : 'http://10.100.51.125:8080/CXFClient/uploadFileServlet',
            method : 'post',
            timeout : 30,
            dataType : 'json',
            report : false,
            returnAll : false,
            data : {
                values : {'username' : 'shiwei'},
                files : { 'file' : path }
            }
        }, function(ret, err) {
            //coding...
            if (ret) {
                var urlJson = JSON.stringify(ret);
                api.alert({
                    msg : urlJson
                });
            } else {
                api.alert({
                    msg : ('错误码：' + err.code + '；错误信息：' + err.msg + 'msg网络状态码：' + err.statusCode)
                });
            }
        });
    }


    //文件下载
    function download() {
        var fs = api.require('fs');
        api.ajax({
            url: 'http://10.100.51.125:8080/CXFClient/downloadFileServlet',
            method: 'post',
            timeout: 30,
            dataType: 'json',
            returnAll: false,
            data: {
                values : {
                    username: 'shiwei',
                    filename: '1.jpg'
                }
            }
        },function(ret, err) {
            if (ret) {
                // TODO 
                alert(ret.path);
                api.download({
                    url: ret.path,
                    report: true,
                    cache: true,
                    allowResume: true,
                    savePath: 'fs://sw'
                },function(ret,err){
                    if (ret) {
                        var value = ('文件大小：'+ret.fileSize+'；下载进度：'+ret.percent+'；下载状态'+ret.state+'存储路径: '+ret.savePath);
                        alert(value);
                    } else{
                        var value = err.msg;
                    }
                });
            } else {
                api.alert({
                    msg:('错误码：'+err.code+'；错误信息：'+err.msg+'网络状态码：'+err.statusCode)
                });
            };
        });


